@model List<BookDto>
@{
    ViewData["Title"] = "Kitap Listesi";
}

<style>
    .library-container {
        padding: 30px 15px;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .library-title {
        font-size: 32px;
        color: #2c3e50;
        margin-bottom: 30px;
        text-align: center;
        font-weight: 600;
        position: relative;
        padding-bottom: 15px;
    }
    
    .library-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: #3498db;
    }
    
    .book-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
        border: none;
        background-color: #fff;
        display: flex;
        flex-direction: column;
    }
    
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }
    
    .book-image-container {
        height: 180px;
        overflow: hidden;
        position: relative;
        background-color: #f5f5f5;
    }
    
    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }
    
    .book-card:hover .book-image {
        transform: scale(1.05);
    }
    
    /* Kitap resimleri yoksa varsayılan arkaplan için */
    .book-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #95a5a6;
        background-color: #ecf0f1;
    }
    
    .book-placeholder i {
        font-size: 48px;
    }
    
    .book-header {
        background-color: #f8f9fa;
        padding: 15px;
        border-bottom: 1px solid #eaeaea;
    }
    
    .book-title {
        font-size: 18px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
        height: 50px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    
    .book-body {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    
    .book-info {
        margin-bottom: 5px;
        font-size: 14px;
        color: #7f8c8d;
    }
    
    .book-info-label {
        font-weight: 600;
        color: #34495e;
    }
    
    .book-status {
        margin: 15px 0;
    }
    
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
    
    .status-available {
        background-color: #2ecc71;
        color: white;
    }
    
    .status-unavailable {
        background-color: #e74c3c;
        color: white;
    }
    
    .rent-button {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: none;
        background-color: #3498db;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s;
        margin-top: auto;
    }
    
    .rent-button:hover {
        background-color: #2980b9;
    }
    
    .rent-button:disabled {
        background-color: #bdc3c7;
        cursor: not-allowed;
    }
    
    .alert-custom {
        border-radius: 8px;
        margin-bottom: 25px;
        padding: 15px;
        border: none;
    }
    
    .alert-success-custom {
        background-color: #d4edda;
        color: #155724;
        border-left: 5px solid #28a745;
    }
    
    .alert-danger-custom {
        background-color: #f8d7da;
        color: #721c24;
        border-left: 5px solid #dc3545;
    }
    
    .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
    }
    
    media (max-width: 768px) {
        .book-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
    }
</style>

<div class="library-container">
    @if(TempData["RentBookError"] != null)
    {
        <div class="alert-custom alert-danger-custom" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i> @TempData["RentBookError"]
        </div>
    }
    
    @if(TempData["RentBookSuccess"] != null)
    {
        <div class="alert-custom alert-success-custom" role="alert">
            <i class="fas fa-check-circle mr-2"></i> @TempData["RentBookSuccess"]
        </div>
    }

    <h1 class="library-title">Kitap Listesi</h1>
    
    <div class="book-grid">
        @foreach (var item in Model)
        {
            <div class="book-item">
                <div class="book-card">
                    <div class="book-image-container">
                        <img src="https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDI0LTA5L3Jhd3BpeGVsX29mZmljZV8zNV9hc3Ryb2lkX3BvcF91cF9mcm9tX2FuX29wZW5lZF9uZXdfYm9va19pc29sYV9lM2JiODUzZS1jNDRhLTQ5ZjUtYTJlMi1mODY4NzY4ZTk1NTZfMS5wbmc.png" class="book-image">
                    </div>
                    <div class="book-header">
                        <h2 class="book-title">@item.Title</h2>
                    </div>
                    <div class="book-body">
                        <div class="book-info">
                            <span class="book-info-label">Yazar:</span> @item.Author
                        </div>
                        <div class="book-info">
                            <span class="book-info-label">ISBN:</span> @item.ISBN
                        </div>
                        <div class="book-status">
                            <span class="book-info-label">Durum:</span>
                            @if (item.IsAvaliable)
                            {
                                <span class="status-badge status-available">Mevcut</span>
                            }
                            else
                            {
                                <span class="status-badge status-unavailable">Mevcut Değil</span>
                            }
                        </div>
                        <form asp-controller="Book" asp-action="RentBook" method="post" class="rent-form">
                            <input type="hidden" name="id" value="@item.Id" id="rentData-@item.Id" />
                            <button type="submit" class="rent-button" @(item.IsAvaliable ? "" : "disabled")>
                                @(item.IsAvaliable ? "Kirala" : "Kiralamaya Uygun Değil")
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>