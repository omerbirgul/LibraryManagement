@model UserRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label asp-for="UserName">Username:</label>
        <input type="text" class="form-control" asp-for="UserName" aria-describedby="emailHelp" placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full Name:</label>
        <input type="text" class="form-control" asp-for="FullName" aria-describedby="emailHelp" placeholder="Enter Full Name">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>